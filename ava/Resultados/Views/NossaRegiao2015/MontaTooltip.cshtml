@{
    var results = @ViewBag.resultado;
    
    string[] splitResultados = results.Split(',');       
}



<div class="tooltip-grafico">            
        
        <div class="dados">
            <h5>@ViewBag.cidade</h5>
            <span class="dia-semana">@ViewBag.semana</span>
            <span class="data">@ViewBag.dia de abril</span>
            <span class="horario">às @ViewBag.horario</span>        
            <!--
            <img src="/ava/projetos/imagens/resultados/cond2.png" class="condicao"/>
            -->
            <span class="temperatura">@splitResultados[0]</span>            
        </div>

        @if (splitResultados.Length > 1)
        {
        <div class="media">
            <div id="galeria-slider" class="galeria-slide">
              @if (splitResultados.Length > 2)
              {
                  <a class="nav_next nav_tooltip nav-material"></a>
                  <a class="nav_prev nav_tooltip nav-material"></a>
              }
              <ul>
                @for (int i = 1; i < @splitResultados.Length; i++)
                {
                    <li>
                        <a href="javascript: openFancy('@splitResultados[i]')" 
                           class="img img-1"
                           style="background-image: url(@splitResultados[i]);">
                        </a> 
                    </li>                   
                }                
              </ul>  
            </div>
        </div>
        }
</div>

<script type="text/javascript">
    function openFancy(path, width, height) {
        jQuery.fancybox({
            'transitionIn': 'none',
            'transitionOut': 'none',
            'titlePosition': 'inside',
            'titleShow': true,
            'showNavArrows': false,
            'autoScale': false,
            'autoDimensions': true,
            'showCloseButton': true,
            'width': width,
            'height': height,
            'overlayColor': '#FFFFFF',
            'scrolling': 'no',
            'href': path
        });
    };
</script>



<style>
    #galeria-slider {
      position: relative;
      overflow: hidden;
      margin: 0 auto;     
    }

    #galeria-slider ul {
      position: relative;
      margin: 0;
      padding: 0;
      height: 150px;
      list-style: none;
    }

    #galeria-slider ul li {
      position: relative;
      display: block;
      float: left;
      margin: 0;
      padding: 0;
      width: 200px;
      height: 140px;
      background: #ccc;
      text-align: center;
      line-height: 150px;
    }

    a.control_prev, a.control_next {
      position: absolute;
      top: 40%;
      z-index: 999;
      display: block;
      padding: 4% 3%;
      width: auto;
      height: auto;
      background: #2a2a2a;
      color: #fff;
      text-decoration: none;
      font-weight: 600;
      font-size: 18px;
      opacity: 0.8;
      cursor: pointer;
    }

    a.control_prev:hover, a.control_next:hover {
      opacity: 1;
      -webkit-transition: all 0.2s ease;
    }

    a.control_prev {
      border-radius: 0 2px 2px 0;
    }

    a.control_next {
      right: 0;
      border-radius: 2px 0 0 2px;
    }

    .slider_option {
      position: relative;
      margin: 10px auto;
      width: 160px;
      font-size: 18px;
    }
</style>



