function montaFiguras(_item){
    $('#showcode').toggle(
					function () {
					    $(this).addClass('up').removeClass('down').next().slideDown();
					},
					function () {
					    $(this).addClass('down').removeClass('up').next().slideUp();
					}
				);
    $('#panel').toggle(
					function () {
					    $(this).addClass('show').removeClass('hide');
					    $('#overlay').stop().animate({ left: -$('#overlay').width() + 20 + 'px' }, 300);
					},
					function () {
					    $(this).addClass('hide').removeClass('show');
					    $('#overlay').stop().animate({ left: '0px' }, 300);
					}
				);

    var $container = $('.am-container'),
					$imgs = $container.find('img').hide(),
					totalImgs = $imgs.length,
					cnt = 0;


    $imgs.each(function (i) {
        var $img = $(this);
        $('<img/>').load(function () {
            ++cnt;
            if (cnt === totalImgs) {
                $('.bl_p_loader').remove();
                $imgs.show();
                $container.montage({
                    fillLastRow: false,
                    alternateHeight: true,
                    alternateHeightRange: {
                        min: 100,
                        max: 100
                    }, margin: 4
                });

                if (_item) {
                    $('#' + _item).click();
                }

                 //paginando figuras
                if(_pagina_figuras_avanca){
                    _pagina_figuras_avanca = false;
                    $('.div-wrapper').eq(0).click();
                }
                
                if(_pagina_figuras_volta){
                    _pagina_figuras_volta = false;
                    $('.div-wrapper').eq(_tot_por_pag_fig-1).click();
                }
            }
        }).attr('src', $img.attr('src'));
    });

   



}


