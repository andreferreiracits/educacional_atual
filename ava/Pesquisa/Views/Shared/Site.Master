function expandex(e) {
   
    e.preventDefault();
    
    if($('#vejoimg').css('display') != 'inline-block' || _pos_geral != Number($(this).find('.am-wrapper').attr('pos'))){
            $('#vejoimg').remove();
            $('.imgseta').hide();
            $(this).find('.imgseta').fadeIn();
            
            _index = $(this).index();
            _pos_geral = Number($(this).find('.am-wrapper').attr('pos'));
            _tot_geral = Number($('#tot_figs').val());
            _img = $(this).find('.am-wrapper').attr('href');
            _a = $(this).find('.am-wrapper');
            _tp = "";
            _cat = $(this).find('.am-wrapper').attr('cat');
            
            //tamanhos de imagem
            _tamanhos = "";
            if(_cat != 139){
                //bi e mapas
                $(this).find('input[name=arquivos_info]').each(function(){
                    _tamanhos+='<a target=_blank href="/' + $(this).val() + '" class="btn_cinza">('+$(this).attr('inttamanhoarq')+'Kb '+$(this).attr('intresolucaoh')+'dpi)</a>';
                });
            }else{
                //enciclopedia
                IMG = new Image();
                IMG.src = _img;
                //alert(IMG.width)
                _tamanhos = '<a target=_blank href="'+_img+'" class="btn_cinza">('+IMG.height+'x'+IMG.width+' pixels)</a>'; 

            }

            _ant = '';
            if(_pos_geral > 1){
                _ant = '<a class="vi_anterior FontAwesome"></a>';
            }
            _prox = '';
            if(_pos_geral < _tot_geral){
                _prox = '<a class="vi_proxima FontAwesome"></a>';
            }

            //ancora
            window.location.hash = _a.attr('id');

            if ($('#secao').val() == 'imagens') {
                _tp = "Imagem";
            } else {
                _tp = "Mapa";
            }
            _prop = "";
            if(_a.attr('prop') != ''){
                _prop = '<div class="txt05zoom">' + _a.attr('prop') + ' </div>';
            }
                
            _texto = '<div class="txt02zoom">' + _a.attr('title') + '</div><div class="txt03zoom">' + _a.attr('texto') + ' </div><div class="txt05zoom">' + _a.attr('autor') + ' </div>'+_prop+'<div class="txt04zoom"><p>Ver em tamanho(s):</p> '+_tamanhos+'</div><div class="txt01zoom">' + _tp + ' ' + _a.attr('pos') + '  de ' + $('#totImg').val() + '</div>';

            for (i = _index; i <= $('.div-wrapper').length; i++) {

                //if ($('.am-wrapper').eq(i).find('img').css('left') != '0px' || $('.am-wrapper').eq(i).find('img').css('top') != '0px' || ($('.div-wrapper').length) == (i + 1)) {
                if ($('.am-wrapper').eq(i).find('img').css('left') != '0px' || ($('.div-wrapper').length) == (i + 1)) {
                
                    if (_img.lastIndexOf(".swf") > 0){
                        $('.am-wrapper').eq(i).closest('div').after('<div id="vejoimg" style="display:none;"class="vejoimg"><a class="vi_fechar FontAwesome"></a><div class="imgzoom"><object width="300px" height="250px"><param name="wmode" value="transparent" /><param name="movie" value=' + _img + '><embed wmode = "transparent" src=' + _img + ' width="300px" height="250px"></embed></object></div><div class="txtimgzoom">' + _texto + '</div>'+_ant+_prox);
                    }else{
                        $('.am-wrapper').eq(i).closest('div').after('<div id="vejoimg" style="display:none;"class="vejoimg"><a class="vi_fechar FontAwesome"></a><div class="imgzoom"><img src="' + _img + '"></div><div class="txtimgzoom">' + _texto + '</div>'+_ant+_prox);
                    }
                    if(_tipo_click == 'img'){    
                        $('#vejoimg').slideDown();
                    }else{
                        $('#vejoimg').fadeIn('fast');
                    }
                    _tipo_click = 'img';
                    break;
                }

            }
            $('.vi_proxima').unbind('click', vai_prox).bind('click', vai_prox);
            $('.vi_anterior').unbind('click', vai_prox).bind('click', volta_ant);
    }else{
            $('.imgseta').hide();
            $('#vejoimg').slideUp('fast');
            _tipo_click = 'img';
    }
}

