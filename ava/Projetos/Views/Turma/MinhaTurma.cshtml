@{
    Layout = "~/Views/Shared/_LayoutMenuTopo.cshtml";
    var serializer = new System.Web.Script.Serialization.JavaScriptSerializer();
}

<!-- MINHA TURMA -->
<minha-turma
    usuario="@serializer.Serialize(ViewBag._usuario)"
