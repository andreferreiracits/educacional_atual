<head>  
    
    <!-- TITLE AREA -->
    <title>
       @if (ViewBag.Title != null)
       {
           @ViewBag.Title
       }
    </title>
    <!-- TITLE AREA -->
    
    @{
        var InitEnableOptimizations = BundleTable.EnableOptimizations;
        BundleTable.EnableOptimizations = false;
    }
    <!-- COMMON INCLUDES CSS -->
    @Styles.Render("~/StaticContent/css")
    
    @Styles.Render("~/Estilos/Projetos")

