        var idUsuarioPublico = "@ViewContext.RequestContext.RouteData.Values["id"]";
        var _action = '@ViewContext.RequestContext.RouteData.Values["action"]';
        var _controller = '@ViewContext.RequestContext.RouteData.Values["controller"]';
