    </script>
         
      

    @Scripts.Render("~/StaticContent/jsmin")

    @{
        BundleTable.EnableOptimizations = false;
    }
    @Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}\" charset=\"ISO-8859-1\"></script>", "~/StaticContent/jsopen")
