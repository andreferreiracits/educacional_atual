<script type="text/javascript">
    function openFancy(path, width, height) {
        jQuery.fancybox({
            'transitionIn': 'none',
            'transitionOut': 'none',
            'titlePosition': 'inside',
            'titleShow': true,
            'showNavArrows': false,
            'autoScale': false,
            'autoDimensions': true,
            'showCloseButton': true,
            'width': width,
            'height': height,
            'overlayColor': '#FFFFFF',
            'scrolling': 'no',
            'href': path
        });
    };
</script>


<style>
    #galeria-slider {
      position: relative;
      overflow: hidden;
      margin: 0 auto;     
    }

    #galeria-slider ul {
      position: relative;
      margin: 0;
      padding: 0;
