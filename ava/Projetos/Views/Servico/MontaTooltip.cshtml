@{
    var results = @ViewBag.resultado;
    
    string[] splitResultados = results.Split(',');       
}



<div class="tooltip-grafico2">            
        
        <div class="dados">
            <h5>@ViewBag.cidade</h5>
            <span class="dia-semana">@ViewBag.semana</span>
            <span class="data">@ViewBag.dia de abril</span>
            <span class="horario">às @ViewBag.horario</span>        
            <!--
            <img src="/ava/projetos/imagens/resultados/cond2.png" class="condicao"/>
            -->
            <span class="temperatura">@splitResultados[0]</span>            
        </div>

        <div class="media">
            <div id="galeria-slider" class="galeria-slide">
              <a class="nav_next nav-material"></a>
              <a class="nav_prev nav-material"></a>
              <ul>
                @for(int i = 1; i < @splitResultados.Length; i++)
                {
                <li><a href="javascript: openFancy('@splitResultados[i]')" back-img="@splitResultados[i]" class="img img-1" style="background-image: url(@splitResultados[i]);"></a> </li>                   
                }                
              </ul>  
            </div>
        </div>
</div>

